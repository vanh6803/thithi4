<%- include('./inc/header') %>

<h1>danh sách</h1>

<div class="container">
    <form class="d-flex" role="search">
      <select name="status" class="form-select" aria-label="Default select example">
        <option selected>Open this select menu</option>
        <option value="0">Chưa hoàn thành</option>
        <option value="1">hoàn thành</option>
      </select>
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
</div>

<div class="container-fluid">
  <table class="table table-bordered ">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">tên công việc</th>
        <th scope="col">tên dự án</th>
        <th scope="col">mô tả</th>
        <th scope="col">trạng thái</th>
        <th scope="col">ảnh</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% obj.forEach((obj, index) => { %>
        <tr>
          <th scope="row"><%= index+1 %></th>
          <td><%= obj.id_work.name %></td>
          <td><%= obj.name %></td>
          <td><%= obj.description %></td>
          <td><%= obj.status ==  0 ? 'chưa hoàn thành' : 'hoàn thành' %></td>
          <td><img src="<%= obj.image %>" alt="" width="80", height="80"></td>
          <td>
            <a href="/edit/<%= obj._id %> " class="btn btn-warning">sửa</a>
            <a href="/delete/<%= obj._id %>" onclick="confirm('want you delete this?')" class="btn btn-danger" >xóa</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<%- include('./inc/footer') %>
