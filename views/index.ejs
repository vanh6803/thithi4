<%- include('./inc/header') %>

<h1>danh sách</h1>

<div class="container-fluid">
  <table class="table table-bordered ">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">tên công việc</th>
        <th scope="col">tên dự án</th>
        <th scope="col">mô tả</th>
        <th scope="col">trạng thái</th>
        <th scope="col">ảnh</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% obj.forEach((obj, index) => { %>
        <tr>
          <th scope="row"><%= index+1 %></th>
          <td><%= obj.work.name %></td>
          <td><%= obj.name %></td>
          <td><%= obj.description %></td>
          <td><%= obj.status %></td>
          <td><img src="<%= obj.image %>" alt="" width="80", height="80"></td>
          <td>
            <a href="/edit/<%= obj._id %> " class="btn btn-warning">sửa</a>
            <a href="/delete/<%= obj._id %>" class="btn btn-danger" >xóa</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<%- include('./inc/footer') %>
